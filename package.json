{
  "name": "trackstack",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "coverage": "vitest run --coverage --project unit",
    "deps:check": "ncu",
    "deps:check:minor": "ncu -t minor",
    "deps:check:patch": "ncu -t patch",
    "deps:check:peer": "ncu --dep peer",
    "deps:upgrade": "ncu -u && npm i",
    "deps:upgrade:minor": "ncu -u -t minor && npm i",
    "deps:upgrade:patch": "ncu -u -t patch && npm i",
    "dev": "vite",
    "format": "npm run prettier --ignore-path .prettierignore --ignore-unknown .",
    "format:fix": "npm run prettier -- --write",
    "format:validate": "npm run prettier -- --list-different",
    "lint:validate": "eslint --max-warnings 0 .",
    "lint:fix": "npm run lint:validate -- --fix",
    "prebuild": "npm run validate",
    "prepare": "husky",
    "prettier": "prettier --ignore-path .prettierignore --ignore-unknown .",
    "prettier:format": "npm run prettier -- --write",
    "prettier:validate": "npm run prettier -- --list-different",
    "preview": "vite preview",
    "release": "npx semantic-release --no-ci",
    "storybook:build": "storybook build",
    "storybook:start": "storybook dev -p 6006 --no-open",
    "storybook:ci": "storybook dev -p 6006 --ci --host 127.0.0.1 --disable-telemetry",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest --run --environment jsdom --project unit",
    "test:stories": "vitest --run --project storybook --pool=threads --poolOptions.threads.singleThread=true",
    "test:watch": "vitest --watch",
    "typescript:validate": "tsc",
    "validate": "concurrently npm:format:validate npm:lint:validate npm:typescript:validate"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.87.4",
    "axios": "^1.12.1",
    "clsx": "^2.1.1",
    "markdown-to-jsx": "^7.7.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-vitest": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.7.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.2",
    "msw-storybook-addon": "^2.0.5",
    "npm-check-updates": "^19.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.0"
  }
}
